
Root:

    text_input: text_input

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Choose Pdf'
                on_release: root.show_load()
            
 
        BoxLayout:
            TextInput:
                id: text_input
                text: ''

        ProgressBar:
            id: pb
            max: 1000
            value: 200


<myPB>:
    value: 400
    max: 500
    canvas:
        Rectangle:
            source: "kapy-bg.jpg"
            size: self.size
            pos: self.pos

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30



            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path,filechooser.selection)


